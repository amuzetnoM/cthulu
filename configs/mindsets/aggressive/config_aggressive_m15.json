{
  "_comment": "Aggressive profile, M15 timeframe - Trend capture specialist",
  "mt5": {
    "login": "${MT5_LOGIN}",
    "password": "${MT5_PASSWORD}",
    "server": "${MT5_SERVER}",
    "timeout": 60000,
    "path": "${MT5_PATH}"
  },
  "risk": {
    "max_position_size": 1.0,
    "default_position_size": 0.05,
    "max_daily_loss": 150.0,
    "max_positions_per_symbol": 2,
    "max_total_positions": 6,
    "position_size_pct": 8.0,
    "use_kelly_sizing": true,
    "emergency_stop_loss_pct": 8.0,
    "circuit_breaker_enabled": true,
    "circuit_breaker_threshold_pct": 5.0
  },
  "trading": {
    "symbol": "BTCUSD#",
    "timeframe": "TIMEFRAME_M15",
    "poll_interval": 30,
    "lookback_bars": 400
  },
  "orphan_trades": {
    "enabled": true,
    "adopt_symbols": ["BTCUSD#"],
    "ignore_symbols": [],
    "apply_exit_strategies": true,
    "max_adoption_age_hours": 0,
    "log_only": false
  },
  "strategy": {
    "type": "dynamic",
    "dynamic_selection": {
      "enabled": true,
      "regime_check_interval": 300,
      "min_strategy_signals": 2,
      "performance_weight": 0.35,
      "regime_weight": 0.35,
      "confidence_weight": 0.30
    },
    "strategies": [
      {
        "type": "ema_crossover",
        "params": {
          "fast_period": 9,
          "slow_period": 21,
          "atr_period": 14,
          "atr_multiplier": 1.5,
          "risk_reward_ratio": 2.5,
          "symbol": "BTCUSD#"
        }
      },
      {
        "type": "momentum_breakout",
        "params": {
          "lookback_period": 20,
          "rsi_threshold": 55,
          "atr_multiplier": 1.2,
          "volume_multiplier": 1.2,
          "risk_reward_ratio": 3.0,
          "symbol": "BTCUSD#"
        }
      },
      {
        "type": "trend_following",
        "params": {
          "adx_threshold": 25,
          "ema_period": 21,
          "atr_period": 14,
          "atr_multiplier": 1.5,
          "risk_reward_ratio": 2.0,
          "symbol": "BTCUSD#"
        }
      }
    ]
  },
  "confidence_threshold": 0.40,
  "exit_strategies": [
    {
      "type": "trailing_stop",
      "enabled": true,
      "params": {
        "atr_multiplier": 1.8,
        "activation_pct": 0.5
      }
    },
    {
      "type": "time_based",
      "enabled": true,
      "params": {
        "max_hold_hours": 10.0,
        "close_before_weekend": true
      }
    },
    {
      "type": "profit_target",
      "enabled": true,
      "params": {
        "target_pct": 1.2,
        "partial_close_enabled": true,
        "partial_close_pct": 40.0
      }
    },
    {
      "type": "adverse_movement",
      "enabled": true,
      "params": {
        "movement_threshold_pct": 0.6,
        "time_window_seconds": 45
      }
    }
  ],
  "indicators": [
    {"type": "rsi", "params": {"period": 14}},
    {"type": "rsi", "params": {"period": 9}},
    {"type": "macd", "params": {"fast_period": 12, "slow_period": 26, "signal_period": 9}},
    {"type": "bollinger", "params": {"period": 20, "std_dev": 2.0}},
    {"type": "adx", "params": {"period": 14}},
    {"type": "supertrend", "params": {"period": 10, "multiplier": 3.0}}
  ],
  "database": {
    "path": "cthulu_aggressive.db"
  },
  "rpc": {
    "enabled": true,
    "host": "127.0.0.1",
    "port": 8278
  },
  "dynamic_sltp": {
    "enabled": true,
    "base_sl_atr_mult": 2.0,
    "base_tp_atr_mult": 4.5,
    "breakeven_activation_pct": 0.45,
    "breakeven_buffer_pct": 0.1,
    "partial_tp_enabled": true,
    "partial_tp_1_pct": 0.33,
    "partial_tp_2_pct": 0.66,
    "trail_activation_pct": 0.65,
    "trail_distance_atr_mult": 1.8
  },
  "adaptive_drawdown": {
    "enabled": true,
    "trailing_lock_pct": 0.45,
    "survival_threshold_pct": 45.0,
    "critical_threshold_pct": 30.0,
    "danger_threshold_pct": 18.0
  }
}




