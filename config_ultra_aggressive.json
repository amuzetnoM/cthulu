{
  "_comment": "Ultra-Aggressive profile with dynamic strategy selection - Cutting-edge trading",
  "mt5": {
    "login": "${MT5_LOGIN}",
    "password": "${MT5_PASSWORD}",
    "server": "${MT5_SERVER}",
    "timeout": 60000,
    "path": "${MT5_PATH}"
  },
  "risk": {
    "max_position_size": 2.0,
    "default_position_size": 0.1,
    "max_daily_loss": 500.0,
    "max_positions_per_symbol": 3,
    "max_total_positions": 10,
    "position_size_pct": 15.0,
    "use_kelly_sizing": true,
    "emergency_stop_loss_pct": 12.0,
    "circuit_breaker_enabled": true,
    "circuit_breaker_threshold_pct": 7.0
  },
  "trading": {
    "symbol": "BTCUSD#",
    "timeframe": "TIMEFRAME_M15",
    "poll_interval": 15,
    "lookback_bars": 500,
    "enable_tick_data": true,
    "enable_scalping": true
  },
  "strategy": {
    "type": "dynamic",
    "dynamic_selection": {
      "enabled": true,
      "regime_check_interval": 180,
      "min_strategy_signals": 3,
      "performance_weight": 0.4,
      "regime_weight": 0.4,
      "confidence_weight": 0.2
    },
    "strategies": [
      {
        "type": "ema_crossover",
        "params": {
          "fast_period": 8,
          "slow_period": 21,
          "atr_period": 14,
          "atr_multiplier": 1.2,
          "risk_reward_ratio": 3.0,
          "symbol": "BTCUSD#"
        }
      },
      {
        "type": "momentum_breakout",
        "params": {
          "lookback_period": 15,
          "rsi_threshold": 50,
          "atr_multiplier": 1.3,
          "volume_multiplier": 1.3,
          "risk_reward_ratio": 3.5,
          "symbol": "BTCUSD#"
        }
      },
      {
        "type": "scalping",
        "params": {
          "fast_ema": 5,
          "slow_ema": 10,
          "rsi_period": 7,
          "rsi_oversold": 20,
          "rsi_overbought": 80,
          "atr_multiplier": 0.8,
          "risk_reward_ratio": 2.5,
          "spread_limit_pips": 2.0,
          "symbol": "BTCUSD#"
        }
      },
      {
        "type": "trend_following",
        "params": {
          "adx_threshold": 20,
          "ema_period": 21,
          "atr_period": 14,
          "atr_multiplier": 1.5,
          "risk_reward_ratio": 2.0,
          "symbol": "BTCUSD#"
        }
      },
      {
        "type": "sma_crossover",
        "params": {
          "fast_period": 5,
          "slow_period": 13,
          "atr_period": 14,
          "atr_multiplier": 1.5,
          "risk_reward_ratio": 2.5,
          "symbol": "BTCUSD#"
        }
      }
    ]
  },
  "confidence_threshold": 0.25,
  "exit_strategies": [
    {
      "type": "adverse_movement",
      "enabled": true,
      "params": {
        "movement_threshold_pct": 0.5,
        "time_window_seconds": 30
      }
    },
    {
      "type": "time_based",
      "enabled": true,
      "params": {
        "max_hold_hours": 8.0,
        "close_before_weekend": true
      }
    },
    {
      "type": "profit_target",
      "enabled": true,
      "params": {
        "target_pct": 1.5,
        "partial_close_enabled": true,
        "partial_close_pct": 50.0
      }
    },
    {
      "type": "trailing_stop",
      "enabled": true,
      "params": {
        "atr_multiplier": 1.5,
        "activation_pct": 0.5
      }
    }
  ],
  "indicators": [
    {
      "type": "rsi",
      "params": {
        "period": 14
      }
    },
    {
      "type": "rsi",
      "params": {
        "period": 7
      }
    },
    {
      "type": "macd",
      "params": {
        "fast_period": 12,
        "slow_period": 26,
        "signal_period": 9
      }
    },
    {
      "type": "bollinger",
      "params": {
        "period": 20,
        "std_dev": 2.0
      }
    },
    {
      "type": "adx",
      "params": {
        "period": 14
      }
    },
    {
      "type": "supertrend",
      "params": {
        "period": 10,
        "multiplier": 3.0
      }
    },
    {
      "type": "vwap",
      "params": {
        "std_dev_multiplier": 2.0
      }
    }
  ],
  "database": {
    "path": "Cthulu_ultra_aggressive.db"
  },
  "rpc": {
    "enabled": true,
    "host": "127.0.0.1",
    "port": 8278
  },
  "features": {
    "ml_enabled": true,
    "adaptive_parameters": true,
    "multi_timeframe_analysis": true
  }
}