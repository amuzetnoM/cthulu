{
  "mt5": {
    "login": "${MT5_LOGIN}",
    "password": "${MT5_PASSWORD}",
    "server": "${MT5_SERVER}",
    "timeout": 60000,
    "path": "${MT5_PATH}"
  },
  "risk": {
    "max_position_size": 2.0,
    "default_position_size": 0.1,
    "max_daily_loss": 100.0,
    "max_positions_per_symbol": 2,
    "max_total_positions": 5,
    "position_size_pct": 5.0,
    "use_kelly_sizing": false,
    "emergency_stop_loss_pct": 8.0,
    "circuit_breaker_enabled": true,
    "circuit_breaker_threshold_pct": 5.0
  },
  "trading": {
    "symbol": "BTCUSD#",
    "timeframe": "TIMEFRAME_M5",
    "poll_interval": 30,
    "lookback_bars": 300
  },
  "strategy": {
    "type": "dynamic",
    "dynamic_selection": {
      "regime_detection_enabled": true,
      "performance_tracking_enabled": true,
      "min_confidence_threshold": 0.6,
      "switch_cooldown_bars": 10,
      "regime_check_interval": 300,
      "min_strategy_signals": 3,
      "performance_weight": 0.4,
      "regime_weight": 0.4,
      "confidence_weight": 0.2
    },
    "strategies": [
      {
        "type": "sma_crossover",
        "params": {
          "fast_period": 5,
          "slow_period": 13,
          "atr_period": 10,
          "atr_multiplier": 1.2,
          "risk_reward_ratio": 2.5
        }
      },
      {
        "type": "ema_crossover",
        "params": {
          "fast_period": 8,
          "slow_period": 21,
          "atr_period": 14,
          "atr_multiplier": 1.5,
          "risk_reward_ratio": 2.5
        }
      },
      {
        "type": "momentum_breakout",
        "params": {
          "lookback_period": 15,
          "rsi_threshold": 50,
          "atr_multiplier": 1.3,
          "volume_multiplier": 1.2,
          "risk_reward_ratio": 3.0
        }
      },
      {
        "type": "scalping",
        "params": {
          "fast_ema": 5,
          "slow_ema": 10,
          "rsi_period": 7,
          "rsi_oversold": 25,
          "rsi_overbought": 75,
          "rsi_long_max": 65,
          "rsi_short_min": 35,
          "atr_multiplier": 0.8,
          "risk_reward_ratio": 2.0
        }
      },
      {
        "type": "mean_reversion",
        "params": {
          "ma_period": 20,
          "bb_std": 2.0,
          "rsi_period": 14,
          "rsi_oversold": 30,
          "rsi_overbought": 70,
          "atr_multiplier": 1.5,
          "risk_reward_ratio": 2.0
        }
      },
      {
        "type": "trend_following",
        "params": {
          "fast_ma": 20,
          "slow_ma": 50,
          "adx_period": 14,
          "adx_threshold": 25,
          "atr_multiplier": 2.0,
          "risk_reward_ratio": 3.0
        }
      }
    ]
  },
  "indicators": [
    {
      "type": "rsi",
      "params": {
        "period": 14
      }
    },
    {
      "type": "rsi",
      "params": {
        "period": 7
      }
    },
    {
      "type": "macd",
      "params": {
        "fast_period": 12,
        "slow_period": 26,
        "signal_period": 9
      }
    },
    {
      "type": "bollinger",
      "params": {
        "period": 20,
        "std_dev": 2.0
      }
    },
    {
      "type": "adx",
      "params": {
        "period": 14
      }
    },
    {
      "type": "atr",
      "params": {
        "period": 10
      }
    },
    {
      "type": "atr",
      "params": {
        "period": 14
      }
    },
    {
      "type": "stochastic",
      "params": {
        "k_period": 14,
        "d_period": 3,
        "smooth": 3
      }
    },
    {
      "type": "supertrend",
      "params": {
        "atr_period": 10,
        "atr_multiplier": 3.0
      }
    },
    {
      "type": "vpt",
      "params": {}
    },
    {
      "type": "volume_oscillator",
      "params": {
        "fast_period": 5,
        "slow_period": 10
      }
    },
    {
      "type": "price_volume_trend",
      "params": {}
    }
  ],
  "exit_strategies": [
    {
      "type": "adverse_movement",
      "enabled": true,
      "params": {
        "movement_threshold_pct": 1.0,
        "time_window_seconds": 60,
        "consecutive_moves_required": 3
      }
    },
    {
      "type": "time_based",
      "enabled": true,
      "params": {
        "max_hold_hours": 24.0,
        "weekend_protection": true,
        "friday_close_time": "16:00",
        "day_trading_mode": false
      }
    },
    {
      "type": "profit_target",
      "enabled": true,
      "params": {
        "target_pct": 2.0,
        "partial_close_enabled": false,
        "risk_reward_ratio": 2.0
      }
    },
    {
      "type": "trailing_stop",
      "enabled": true,
      "params": {
        "atr_multiplier": 2.0,
        "activation_profit_pct": 0.5,
        "min_stop_distance_pips": 10.0
      }
    }
  ],
  "database": {
    "path": "${DATABASE_PATH}"
  },
  "runtime": {
    "dry_run": false,
    "live_run": true
  },
  "cache_enabled": true
}